// ─── Left: Approvals List Panel ───────────────────────────────────────────────

function ApprovalsList({ approvals, loading, onSelect }: {
  approvals: ApprovalItem[];
  loading: boolean;
  onSelect: (item: ApprovalItem) => void;
}) {
  const [activeFilter, setActiveFilter] = useState<ApprovalStatus>('ALL');
  const [search, setSearch] = useState('');

  const filtered = approvals.filter((a) => {
    const matchFilter = activeFilter === 'ALL' || a.status === activeFilter;
    const matchSearch = search === '' ||
      a.requestNo.toLowerCase().includes(search.toLowerCase()) ||
      a.formTitle.toLowerCase().includes(search.toLowerCase()) ||
      a.legalOfficer.toLowerCase().includes(search.toLowerCase());
    return matchFilter && matchSearch;
  });

  const leftBorder: Partial<Record<ApprovalStatus, string>> = {
    PENDING:          'border-l-yellow-400',
    IN_PROGRESS:      'border-l-blue-400',
    MY_REJECTIONS:    'border-l-red-400',
    OTHER_REJECTIONS: 'border-l-orange-400',
    APPROVED:         'border-l-emerald-400',
    COMPLETED:        'border-l-emerald-400',
  };

  return (
    <div className="flex flex-col h-full" style={{ background: 'linear-gradient(160deg, #0f2240 0%, #1A438A 100%)' }}>

      {/* Header */}
      <div className="px-4 pt-4 pb-2 flex-shrink-0">
        <div className="flex items-center gap-2 mb-3">
          <span className="text-white font-bold text-sm">Approvals</span>
          {!loading && (
            <span className="text-[10px] bg-white/10 text-white/70 px-2 py-0.5 rounded-full font-semibold">
              {filtered.length}
            </span>
          )}
          <div className="relative ml-auto">
            <select value={activeFilter} onChange={(e) => setActiveFilter(e.target.value as ApprovalStatus)}
              className="text-[11px] font-bold bg-[#1183B7]/40 text-white border border-[#1183B7]/50 rounded-lg pl-3 pr-6 py-1.5 focus:outline-none appearance-none">
              {APPROVAL_FILTERS.map((f) => (
                <option key={f} value={f}>{STATUS_CONFIG[f].label}</option>
              ))}
            </select>
            <span className="absolute right-1.5 top-1/2 -translate-y-1/2 text-white/60 pointer-events-none text-[10px]">▾</span>
          </div>
        </div>
        <div className="relative">
          <Search className="absolute left-2.5 top-1/2 -translate-y-1/2 w-3.5 h-3.5 text-[#91ADC5]" />
          <input type="text" value={search} onChange={(e) => setSearch(e.target.value)}
            placeholder="Submission No, Legal Officer..."
            className="w-full bg-[#1A438A]/40 border border-[#1183B7]/30 rounded-lg pl-8 pr-3 py-1.5 text-white text-xs placeholder:text-[#91ADC5]/60 focus:outline-none focus:border-[#1183B7]" />
        </div>
      </div>

      {/* List */}
      <div className="flex-1 overflow-y-auto divide-y divide-[#1183B7]/15">
        {loading ? (
          <div className="flex items-center justify-center py-12">
            <Loader2 className="w-6 h-6 text-white/50 animate-spin" />
          </div>
        ) : filtered.length === 0 ? (
          <div className="flex flex-col items-center justify-center py-12 gap-2">
            <AlertCircle className="w-8 h-8 text-white/20" />
            <p className="text-white/40 text-xs">No submissions found</p>
          </div>
        ) : (
          filtered.map((item) => (
            <button key={item.id} onClick={() => onSelect(item)}
              className={`w-full text-left px-4 py-3 hover:bg-[#1183B7]/15 transition-colors group border-l-4 ${leftBorder[item.status] || 'border-l-transparent'}`}>
              <div className="flex items-start justify-between gap-2">
                <div className="flex-1 min-w-0">
                  <p className="text-white text-xs font-bold truncate leading-tight mb-0.5">{item.requestNo} – {item.formTitle}</p>
                  <p className="text-[#91ADC5] text-[10px]">Legal Officer : {item.legalOfficer || '—'}</p>
