// ─── Main Page ────────────────────────────────────────────────────────────────

export default function LegalGMHomePage() {
  const router = useRouter();
  const [preview, setPreview]       = useState<ApprovalItem | null>(null);
  const [approvals, setApprovals]   = useState<ApprovalItem[]>([]);
  const [statsCards, setStatsCards] = useState<StatsCard[]>(
    STATS_CARD_CONFIG.map((c) => ({ ...c, count: 0 }))
  );
  const [loading, setLoading]       = useState(true);

  useEffect(() => {
    const load = async () => {
      try {
        const res = await fetch('/api/submissions');
        const data = await res.json();
        if (!res.ok || !data.success) return;

        const submissions: {
          id: string; submissionNo: string; title: string; status: string;
          assignedLegalOfficer?: string; createdAt: string;
        }[] = data.data;

        // Map submissions → ApprovalItem
        const mapped: ApprovalItem[] = submissions.map((s) => ({
          id: s.id,
          requestNo: s.submissionNo,
          formTitle: s.title || 'Contract Review Form',
          legalOfficer: s.assignedLegalOfficer || '—',
          createdDate: fmtDate(s.createdAt),
          status: mapDbStatusToUI(s.status),
          statusLabel: mapDbStatusToLabel(s.status),
          route: `/form1/legal-gm?id=${s.id}`,
        }));
        setApprovals(mapped);

        // Stats: count "Contract Review Form" submissions by status
        // For now we only have Form 1, so the first card gets the real count
        const total = submissions.length;
        setStatsCards(STATS_CARD_CONFIG.map((c, i) => ({
          ...c,
          count: i === 0 ? total : c.label === 'Contract Review Form' ? total : 0,
        })));
      } catch (err) {
        console.error('Failed to load submissions:', err);
      } finally {
        setLoading(false);
      }
    };
    load();
  }, []);

  return (
    <div className="h-screen flex flex-col overflow-hidden bg-[#f0f4f9]" style={{ fontFamily: "'DM Sans', sans-serif" }}>
      <style>{`@import url('https://fonts.googleapis.com/css2?family=DM+Sans:wght@300;400;500;600;700&display=swap');`}</style>

      {/* ── Top Nav ── */}
      <div className="flex items-center justify-between px-6 py-3 bg-white border-b border-slate-200 flex-shrink-0 shadow-sm">
        <div className="flex items-center gap-3">
          <div className="w-9 h-9 rounded-full bg-gradient-to-br from-pink-400 to-pink-600 flex items-center justify-center text-white font-bold text-sm shadow">D</div>
          <div>
            <p className="text-sm font-bold text-[#17293E] leading-tight">Dinali Gurusinghe</p>
            <p className="text-[11px] text-[#4686B7] font-semibold">Legal GM</p>
          </div>
        </div>
        <div className="text-center">
          <p className="text-[10px] text-slate-400 uppercase tracking-wider">DIMO Legal Help Desk</p>
          <p className="text-base font-black text-[#1A438A]">Legal GM Dashboard</p>
        </div>
        <Button variant="ghost" className="text-slate-600 hover:bg-slate-100 text-sm" onClick={() => router.push('/login')}>
          <LogOut className="w-4 h-4 mr-2" />
          Logout
        </Button>
      </div>

      {/* ── Body: split layout ── */}
      <div className="flex-1 flex overflow-hidden">
        <div className="w-[300px] flex-shrink-0 flex flex-col overflow-hidden border-r border-[#1183B7]/20">
          <ApprovalsList approvals={approvals} loading={loading} onSelect={(item) => setPreview(item)} />
        </div>
        <Dashboard statsCards={statsCards} />
      </div>

      {/* Preview popup */}
      {preview && (
        <QuickPreview
          item={preview}
          onShowMore={() => { router.push(preview.route); setPreview(null); }}
          onClose={() => setPreview(null)}
        />
      )}
    </div>
  );
}