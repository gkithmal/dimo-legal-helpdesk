                </button>
                <button onClick={() => setShowConfirm('approve')}
                  className="flex-1 py-3 rounded-xl font-bold text-sm text-white active:scale-95 transition-all"
                  style={{ background: 'linear-gradient(135deg, #22c55e, #16a34a)' }}>
                  Approve
                </button>
              </div>
            ) : (
              <div className={`w-full py-3 rounded-xl font-bold text-sm text-center
                ${myStatus === 'APPROVED' ? 'bg-emerald-50 border-2 border-emerald-300 text-emerald-700' : 'bg-red-50 border-2 border-red-300 text-red-700'}`}>
                {myStatus === 'APPROVED' ? '✓ You have approved this request' : '✗ Cancelled — Initiator notified'}
              </div>
            )}
          </div>
        </div>
      </div>

      {/* Modals */}
      {showLog && <ViewLogModal log={log} onClose={() => setShowLog(false)} />}
      {showConfirm === 'approve' && (
        <ConfirmModal title="Approve this request?" message="Your approval will be recorded and the workflow will continue."
          confirmLabel="Yes, Approve" confirmColor="linear-gradient(135deg, #22c55e, #16a34a)"
          onConfirm={(c) => handleAction('approve', c)} onClose={() => setShowConfirm(null)} />
      )}
      {showConfirm === 'cancel' && (
        <ConfirmModal title="Cancel this request?"
          message="This will immediately reject the request and notify the Initiator directly. This action cannot be undone."
          confirmLabel="Yes, Cancel" confirmColor="linear-gradient(135deg, #ef4444, #dc2626)"
          requireComment onConfirm={(c) => handleAction('cancel', c)} onClose={() => setShowConfirm(null)} />
      )}
      {showSuccess === 'approve' && (
        <SuccessModal title="Approved!" message="Contract review form has been approved."
          onClose={() => { setShowSuccess(null); router.push(ROUTES.HOME); }} />
      )}
      {showSuccess === 'cancel' && (
        <SuccessModal title="Rejected!" message="Contract review form has been rejected. Initiator has been notified directly."
          onClose={() => { setShowSuccess(null); router.push(ROUTES.HOME); }} />
      )}
    </div>
  );
}