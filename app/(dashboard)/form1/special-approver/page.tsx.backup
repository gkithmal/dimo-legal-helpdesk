const WORKFLOW_STEPS = ['Form\nSubmission', 'Approvals', 'Legal GM\nReview', 'In\nProgress', 'Legal GM\nApproval', 'Ready\nto Collect'];

function Stepper() {
  const active = 3;
  return (
    <div className="relative flex justify-between items-start pt-1">
      <div className="absolute top-[9px] left-[9px] right-[9px] h-px bg-slate-200" />
      <div className="absolute top-[9px] left-[9px] h-px bg-[#22c55e]" style={{ width: `${(active / (WORKFLOW_STEPS.length - 1)) * 100}%` }} />
      {WORKFLOW_STEPS.map((step, i) => (
        <div key={i} className="relative flex flex-col items-center z-10" style={{ width: `${100 / WORKFLOW_STEPS.length}%` }}>
          <div className={`w-[18px] h-[18px] rounded-full border-2 flex items-center justify-center shadow-sm
            ${i < active ? 'bg-[#22c55e] border-[#22c55e]' : i === active ? 'bg-[#22c55e] border-[#22c55e] ring-4 ring-[#22c55e]/20' : 'bg-white border-slate-300'}`}>
            {i < active && <CheckCircle2 className="w-2.5 h-2.5 text-white" />}
            {i === active && <div className="w-2 h-2 rounded-full bg-white" />}
          </div>
          <p className={`text-[9px] text-center leading-tight whitespace-pre-line mt-1.5 px-0.5 ${i <= active ? 'text-[#1A438A] font-bold' : 'text-slate-400 font-medium'}`}>{step}</p>
        </div>
      ))}
    </div>
  );
}

